class StudentsController < ApplicationController
  def new
    @student = Student.new
  end
  def create
    @student = Student.new(params[:student])
    if @student.save
      flash[:success] = "Student created successfully"
      render'new'
    else
      @title = "Student Creation"
      render "new"
    end
  end
  def index
	  @student = Student.search(params[:search])
  end
  

end
